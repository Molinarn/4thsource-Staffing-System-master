%section
  %ul#breadcrumbs
    %li
      = link_to 'Home', root_path 
      = raw '&raquo;'
    %li
      = link_to_resume('Resume', current_candidate.id, :action => 'resume')
      = raw '&raquo;'
    %li
      =link_to_project("Projects", @candidate.id, :action => "index")
      = raw '&raquo;'
    %li
      = link_to "Roles", :controller => "projects", :action => "show", :id => @candidate.id, :project_id=> @project.id
      = raw '&raquo;'
    %li= raw('<em>new</em>')
    .clear
  %h3.page_headline 
    %i.iconRolesHeadLine
    .h3-page-headline
      Role for
      = @title
  .divider-headline
  %br
  #flash
    - flash.each do |key, value|
      .flash{:class => key}= value
  = link_to "Back", :controller => "projects", :action => "show", :id => @candidate.id, :project_id => @project.id
  %br
  %br
  = form_for(:projects_role, :html => {:class => "experience", :method => "post"}) do |f|
    %h4
      Please enter the following information
    .divider
    %br  
    .field
      = f.label "Role type"
      %br
      = f.select :id, options_from_collection_for_select(Role.where({:approved_flag => [true,false]}).all, "id", "name", :selected => @role)
    .field
      = f.label :date_in
      %br
      = f.text_field :date_in, :id => 'date_in', :readonly => 'true', :style => 'cursor: pointer; background-color: white', :value => @e.try(:date_in).try(:strftime,'%Y-%m-%d')
    .field
      = f.label :date_out
      %br
      = f.text_field :date_out, :id => 'date_out', :readonly => 'true', :style => 'cursor: pointer; background-color: white', :value => @e.try(:date_out).try(:strftime,'%Y-%m-%d')
    .actions
      %br
      = f.submit "Update"
    :javascript
          jQuery(document).ready(function(){
            $( "#date_in" ).datepicker({
              changeMonth: true,
              changeYear: true,
              dateFormat: 'yy-mm-dd',
              yearRange: "1950:2013",
              onClose: function( selectedDate ) {
              $( "#date_out" ).datepicker( "option", "minDate", selectedDate );
              }
              });
              $( "#date_out" ).datepicker({
              changeMonth: true,
              changeYear: true,
              dateFormat: 'yy-mm-dd',
              yearRange: "1950:2013",
              onClose: function( selectedDate ) {
              $( "#date_in" ).datepicker( "option", "maxDate", selectedDate );
              }
              });
          });
