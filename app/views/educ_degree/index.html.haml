= javascript_include_tag 'check.js'
%section
  %ul#breadcrumbs
    %li
      = link_to 'Home', root_path
      = raw '&raquo;'
    %li
      = "Catalogs" 
      = raw '&raquo;'
    %li
      = raw '<em>'
      = link_to "Education Degrees", :controller => "educ_degree", :action => "index"
      = raw '</em>'
    .clear
  %h3.page_headline
    %i.iconEducation
    .h3-page-headline
      Education Degrees
  .divider-headline
  #flash
    - flash.each do |key, value|
      .flash{:class => key}= value
  %br
  -if has_admin_role?
    %br
      %strong
        = link_to "New", :controller => "educ_degree", :action => "new"
    %br
    %br
    %br
    -if @degrees.length == 0
      .educationEmptyTitle
        Please Insert at Least one Education Degree
    -else
      = form_for(:table, :url=>{:action=>'action'}, :html => {:multipart => true, :id => "EducationDegreeTableForm"}) do |f|
        %table#education_degree_table.display
          %thead
            %tr
              %th
                Approved&nbsp;&nbsp;&nbsp;&nbsp;
              %th
                Name
              %th
                Approved By
          %tbody
            -i = 0
            -@degrees.each do |row|
              %tr
                %td
                  = check_box_tag "id_" + i.to_s(), row.id.to_s(), row.approved_flag, :name => "approved_flag_" + i.to_s(), :class => "id" + i.to_s()
                %td
                  = row.name
                %td 
                  = row.approved_by
              -i = i + 1
        &nbsp;&nbsp;
        = check_box_tag "approved_flag_all", @degrees.count.to_s()
        Select all
        %br
        %br
        = submit_tag "Update", :name => 'update_button', :class => 'btn btn-primary'
        &nbsp;&nbsp;&nbsp;&nbsp;
        = submit_tag "Delete", :name => 'delete_button', :class => 'btn', :confirm => "Do you want to delete the selected elements?"
  -else
    .educationEmptyTitle
      This User Have not Permission in this Catalog
