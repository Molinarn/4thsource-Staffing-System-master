<!-- Content -->
= javascript_include_tag 'technologies'
%section
  %ul#breadcrumbs
    %li
      = link_to 'Home', root_path
      = raw '&raquo;'
    %li
      = link_to 'Platforms', '/staff/' + current_candidate.id.to_s + '/tags/languages'
      = raw '&raquo;'
    %li
      = raw '<em>'
      Technologies
      = raw '</em>'
    .clear
  %h3.page_headline
    %i.iconEducation
    .h3-page-headline
      Platforms/Technologies catalog
  .divider-headline
  %br
    %strong
      = link_to "Back", :controller => "tags", :action => "languages"
  %br
  %br    
  #datatbl
    %button{:class=>'btn-primary', :id=>'new'}
      New
    %br
    %br    
    = form_for(:table, :url=>{:action=>'index'}) do |f|    
      %table{:id=>'tblTechnologies', :cellpadding=>"0", :cellspacing=>"0", :border=>"0", :class=>"display", :width=>"100%"}
        %thead
          %tr
            %th
              = 'Id'
            %th 
              = 'Name'
            %th{:align=>'center'}
              = 'Delete'
        %tbody
          - @i = 0
          - @tags.each do |t|
            %tr
              %td
                = t.id
              %td
                %a{:href=>'#!', :onclick=>"Edit(#{@i},\'#{t.technology}\')"}                  
                  = t.technology
              %td{:style=>'text-align: center'}
                %a{:href=>'#!', :onclick=>"Delete(#{@i});"}
                  = 'x'
            - @i = @i + 1
    #dlgConfirm{:title=>'Confirm'}
      = 'This item will be deleted, are you sure?'
    #dialog{:title=>'New technology'}
      %form{:id=>'frmTechnologies', 'data-validate'=>'parsley'}
        %table
          %tr
            %td{:valign=>'top'}
              = 'Name:'
            %td
              %input{:id=>'fid', :name=>'technology[lang_id]', :type=>'hidden', :value=>"#{@languageId}"}
              %input{:id=>'fname', :type=>"text", :name=>'technology[technology]', 'data-required'=>'true'}
