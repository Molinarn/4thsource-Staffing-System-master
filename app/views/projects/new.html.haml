%section
  %ul#breadcrumbs
    %li
      = link_to 'Home', root_path 
      = raw '&raquo;'
    %li
      = link_to_resume('Resume', current_candidate.id, :action => 'resume')
      = raw '&raquo;'
    %li
      =link_to_project("Projects", @candidate.id, :action => "index")
      = raw '&raquo;'
    %li= raw('<em>new</em>')
    .clear
  %h3.page_headline 
    %i.iconExperienceHeadLine
    .h3-page-headline
      Project
  .divider-headline
  #flash
    - flash.each do |key, value|
      .flash{:class => key}= value
      %br
  =link_to_project("Back", @candidate.id, :action => "index")
  %br
  %br
  %br
  %br
  = form_for(:project, :html => {:class => "experience", :method => "post"}) do |f|
    %h4
      Please enter the following information
    .divider
    %br  
    .field
      = f.label "Project name"
      %br
      = f.text_field :name 
    %br
    .field
      = f.label "Summary"
      %br 
      = f.text_area :summary
    .actions
      %br
      = f.submit "Submit", :class => "btn btn-primary"
